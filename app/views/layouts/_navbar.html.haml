.navbar-header
  %button.navbar-toggle.collapsed{"aria-expanded": "false", "data-target": "#bs-example-navbar-collapse-1", "data-toggle": "collapse", type: "button"}
    %span.sr-only Toggle navigation
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar
  = link_to "SaveBudget", root_path, class: 'navbar-brand'
.collapse.navbar-collapse
  %ul.nav.navbar-nav
    %li{ class: "#{ 'active' if categories_active?}" }= link_to "Categories", categories_path
    %li{ class: "#{ 'active' if transactions_active?}" }= link_to "Transactions", transactions_path
  %ul.nav.navbar-nav.navbar-right
    - if user_signed_in?
      %li.dropdown
        = link_to "#", class: "dropdown-toggle", "aria-expanded": "false", "aria-haspopup": "true", "data-toggle":"dropdown", role: "button" do
          = current_user.email
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to "Sign out", destroy_user_session_path, :method => :delete
    - else
      %li
        = link_to "Sign In", new_user_session_path
