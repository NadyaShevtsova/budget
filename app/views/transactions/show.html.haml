%h3.col-sm-offset-2
  Transaction ##{@transaction.id}
.row
  .col-md-12
    .col-md-2
      %strong Category:
    .col-md-10
      = @transaction.category.name
.row
  .col-md-12
    .col-md-2
      %strong Type:
    .col-md-10
      = type(@transaction.income)
.row
  .col-md-12
    .col-md-2
      %strong Date:
    .col-md-10
      = @transaction.date.strftime("%d/%m/%Y")
.row
  .col-md-12
    .col-md-2
      %strong Amount:
    .col-md-10
      = number_to_currency @transaction.amount
.row
  .col-md-12
    .col-md-2
      %strong Description:
    .col-md-10
      = raw @transaction.description
.row
  .col-md-12
    .col-md-2
      = link_to 'Edit', edit_transaction_path(@transaction)
      |
      = link_to 'Back', transactions_path
