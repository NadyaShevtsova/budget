%tr
  %td= transaction.category.try :name
  %td= type(transaction.income)
  %td= transaction.date.strftime('%d/%m/%Y')
  %td= number_to_currency transaction.amount
  %td= raw transaction.description
  %td
    = link_to 'Edit', edit_transaction_path(transaction)
    = link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }
