.col-md-12
  = search_form_for @q do |f|
    .form-group
      = f.label :category_name_or_description_cont, 'Category Name or Description'
      = f.text_field :category_name_or_description_cont

.col-md-12
  %h1 Listing Transactions
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= sort_link @q, :category_name, "Category"
        %th= sort_link @q, :income, "Type"
        %th= sort_link @q, :date, "Date"
        %th= sort_link @q, :amount, "Amount"
        %th= sort_link @q, :description, "Description"
        %th{ colspan: '3'} Action
    %tbody
      = render @transactions
  %br
    = link_to 'New Transaction', new_transaction_path

.col-sm-offset-2
  = paginate @transactions
