.col-md-12
  %h1 Listing Transactions
  .datatable
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th= "Category"
          %th= "Type"
          %th= "Date"
          %th= "Amount"
          %th= "Description"
          %th{ colspan: '3'} Action
      %tbody
        = render partial: 'transaction', collection: @transactions
      - if @transactions.blank?
        %tr
          %td.text-center{ colspan: 6 }= 'No transactions'
  %br
    = link_to 'New Transaction', new_transaction_path

-#.col-sm-offset-2
  -#= paginate @transactions
.col-md-12
  %h2= "Current balance: #{@current_balance}"
.col-md-12
  #piechart_3d{:style => "width: 900px; height: 500px;"}
.col-md-12
  #chart_div{:style => "width: 1000px; height: 500px;"}
