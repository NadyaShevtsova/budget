.col-sm-offset-3
  = search_form_for @q, class: "form-inline" do |f|
    .form-group
      = f.label :category_name_or_description_cont, 'Search by Category or Description', class: 'control-label'
      = f.text_field :category_name_or_description_cont, class: 'form-control'

.col-md-12
  %h1 Listing Transactions
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= sort_link @q, :category_name, "Category"
        %th= sort_link @q, :income, "Type"
        %th= sort_link @q, :date, "Date"
        %th= sort_link @q, :amount, "Amount"
        %th= sort_link @q, :description, "Description"
        %th{ colspan: '3'} Action
    %tbody
      = render @transactions
    - if @transactions.blank?
      %tr
        %td.text-center{ colspan: 6 }= 'No transactions'
  %br
    = link_to 'New Transaction', new_transaction_path

.col-sm-offset-2
  = paginate @transactions
