- if devise_mapping.omniauthable?
  .col-sm-offset-2.col-sm-3
    .omb_socialButtons
      - resource_class.omniauth_providers.each do |provider|
        - if current_user and current_user.authorizations.pluck(:provider).include?(provider.to_s)
          .col-sm-offset-2= "#{provider.to_s.titleize} connected"
        - else
          = link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-block omb_btn-#{provider}" do
            %i{class: "fa fa-#{provider} visible-xs "}
            %span.hidden-xs= "Sign in with #{OmniAuth::Utils.camelize(provider)}"

