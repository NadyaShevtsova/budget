#content
  .profile_header
    %h1 Forgot your password?
  .form-devise
    = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'shift-left' } do |f|
      = devise_error_messages!
      .right-col
        = render "devise/shared/social_links"
      .left-col
        %div
          = f.label :email
          = f.email_field :email, autofocus: true
        %div
          = f.submit "Reset password", class: 'btn'
        = render "devise/shared/links"
