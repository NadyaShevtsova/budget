%h1 Categories
.col-sm-offset-2
  = paginate @categories
%ul#sortable{ "data-update-url" => sort_categories_url }
  = render partial: "category", collection: @categories
  - if @categories.blank?
    %li.ui-state-default.text-center
      = 'No categories'

